<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.navigationapp.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >

    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.navigationapp.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >

    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.navigationapp.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" >

        <action
            android:id="@+id/action_thirdFragment_to_fragment4"
            app:destination="@id/fragment4" />
    </fragment>
    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.navigationapp.fragment4"
        android:label="fragment_fragment4"
        tools:layout="@layout/fragment_fragment4" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.navigationapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>